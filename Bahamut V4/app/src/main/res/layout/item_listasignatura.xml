<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/Blanco">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvAsignaturaList"
        android:layout_toEndOf="@+id/ivAsignaturaIzq"
        android:layout_marginLeft="42dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivAsignaturaIzq" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:id="@+id/ivAsignaturaIzq"
        android:background="@color/Amarillo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:id="@+id/ivAsignaturaDer"
        android:background="@color/Amarillo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/ivAsignaturaIcon"
        android:layout_toLeftOf="@+id/ivAsignaturaDer"
        android:layout_toStartOf="@+id/ivAsignaturaDer"
        android:layout_marginRight="19dp"
        android:src="@drawable/mate"
        android:layout_alignParentBottom="true" />

</RelativeLayout>